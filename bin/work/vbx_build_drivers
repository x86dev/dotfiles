#!/bin/sh

. ${HOME}/.functions.work

__vbx_env "$MY_VBOX_BRANCH"

case "$MY_VBOX_TARGET_OS" in
    linux)
        MY_VBOX_DRV_DEPS="\
            RuntimeBldProg \
            RuntimeR0 \
            RuntimeR3 \
            VBoxRT \
            VBoxNetFlt-src \
            VBoxNetFlt-sh \
            VBoxNetAdp-src \
            HostDrivers-scripts \
            vboxdrv-src"

        case "$MY_VBOX_BRANCH" in
            5.1)
                MY_VBOX_DRV_DEPS="$MY_VBOX_DRV_DEPS \
                    vboxdrv-mod"
                ;;
            *)
                ;;
        esac
        ;;
    darwin)
        MY_VBOX_DRV_DEPS="\
            RuntimeR0 \
            RuntimeR3 \
            RuntimeBldProg \
            VBoxRT \
            VBoxDrv \
            VBoxDrv.kext \
            VBoxNetAdp \
            VBoxNetAdp.kext \
            VBoxNetFlt \
            VBoxNetFlt.kext \
            VBoxUSB \
            VBoxUSB.kext \
            HostDrivers-darwin-sh \
            SUPDrvScripts \
            ScriptsUSB \
            Scripts-darwin \
            Scripts-darwin-adp"
        ;;
    win)
        MY_VBOX_DRV_DEPS="\
            RuntimeR0 \
            RuntimeR3 \
            RuntimeBldProg \
            VBoxRT \
            VBoxDrv \
            VBoxDrv-inf \
            SUPInstall \
            SUPUninstall"
        MY_VBOX_DRV_OPTS="VBOX_SIGNING_MODE=test"
        ;;
    *)
        ;;
esac

__vbx_kill
__vbx_drv_uninstall

( cd ${MY_VBOX_PATH_ROOT} && ${MY_VBOX_KMK} KBUILD_TYPE=release ${MY_VBOX_DRV_OPTS} ${MY_VBOX_DRV_DEPS} $@ )

#!/bin/sh

. ${HOME}/.functions.work

__vbx_env ${1} ${2}

vbx_kill

case "$MY_VBOX_TARGET_OS" in
    linux)
        cd ${MY_VBOX_PATH_ROOT}/out/${MY_VBOX_TARGET_OS}.${MY_VBOX_TARGET_ARCH}/release/bin/src/
        make
        sudo make load
        sudo chmod 777 /dev/vbox*
        cd ${MY_VBOX_PATH_OUT}/
        ./VirtualBox &
        ;;
    darwin)
        cd ${MY_VBOX_PATH_ROOT}/out/${MY_VBOX_TARGET_OS}.${MY_VBOX_TARGET_ARCH}/release/dist/VirtualBox.app/Contents/MacOS
        ./load.sh
        cd ${MY_VBOX_PATH_OUT}/
        ./VirtualBox &
        ;;
    win)
        cd ${MY_VBOX_PATH_ROOT}/out/${MY_VBOX_TARGET_OS}.${MY_VBOX_TARGET_ARCH}/release/bin/
        ./NetLwfUninstall.exe
        ./NetAdpUninstall.exe
        ./NetAdp6uninstall.exe
        ./NetFltuninstall.exe
        ./USBUninstall.exe
        ./SUPUninstall.exe
        ./SUPInstall.exe
        cd ${MY_VBOX_PATH_ROOT}/out/${MY_VBOX_TARGET_OS}.${MY_VBOX_TARGET_ARCH}/debug/bin/
        ${MY_WIN_CMD_EXE} /C comregister.cmd
        ./VirtualBox.exe &
        ;;
    *)
        ;;
esac
